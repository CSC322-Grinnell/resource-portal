.container
  .row
    .col-md-12
      %h1{:style => "text-align: center"} Administrator Home
  .row.admin-actions
    .col-md-4.col-sm-12
      .btn-group.btn-group-lg.btn-group-justified
        %a.btn.btn-success{:href => "/resources/new", :role => "button"}
          Enter a New Resource
          %span.fa.fa-plus
    .col-md-4.col-sm-12
      .btn-group.btn-group-lg.btn-group-justified
        %a.btn.btn-success{:href => "/users/invitation/new", :role => "button"}
          Invite Admin
          %span.fa.fa-user-plus
        %a.btn.btn-primary{:href => "/users", :role => "button"}
          Edit Admins
          %span.fa.fa-user
    .col-md-4.col-sm-12
      .btn-group.btn-group-lg.btn-group-justified
        %a.btn.btn-success{href: new_category_path, role: "button"}
          Create Category
          %span.fa.fa-plus
        %a.btn.btn-primary{:href => "/categories", :role => "button"}
          Edit Categories
          %span.fa.fa-folder-open
  .row
    %ul.nav.nav-pills
      %li.active
        %a(href="#pending_tab" data-toggle="tab" aria-expanded="true")
          %span.fa.fa-spinner.fa-lg
          Pending Resources
      %li
        %a(href="#existing_tab" data-toggle="tab")
          %span.fa.fa-database.fa-lg
          Edit Existing
    .tab-content
      .tab-pane#pending_tab.active
        #accordion1.panel-group
        -@pending_resources.each do |category,resource_values|
          .panel.panel-default
            .panel-heading
              %h4.panel-title
                %a{"data-parent" => "#accordion1", "data-toggle" => "collapse", :href => "#item_Pending_#{category}"}
                  %span.fa.fa-arrow-circle-down.fa-lg
                  #{category} (#{resource_values.length})
            .panel-collapse.collapse{:id => "item_Pending_#{category}"}
              .panel-body
                - resource_values.each do |resource|

                  .row.resource_block

                    %h3 #{resource.title}
                    %p.description #{resource.description_of_service}

                    .col-md-6
                      %ul{:class => "list-group"}
                        %li Address: #{resource.address}
                        %li Alternative Address: #{resource.alternative_address}
                        %li Phone: #{resource.phone_number}
                        %li Alternative Phone: #{resource.alternative_phone_number}
                        %li Website: #{resource.website}
                        %li Fax: #{resource.fax_number}
                        %li Contact Email: #{resource.contact_email}
                        %li Agency Email: #{resource.agency_email}
                        %li Name of Submitter: #{resource.name_of_submitter}

                    .col-md-6
                      = button_to('Approve',
                                  { :action => 'modify_status',
                                    :decision =>"Approved",
                                    :id => resource.id },
                                    :class => 'btn btn-success')

                      = button_to('Reject',
                                  { :action => 'modify_status',
                                    :decision =>"Rejected",
                                    :id => resource.id },
                                    :class => 'btn btn-danger')


      .tab-pane.fade#existing_tab
        #accordion.panel-group
        -@approved_resources.each do |category, resource_values|
          .panel.panel-default
            .panel-heading
              %h4.panel-title
                %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#item_#{category}"}
                  %span.fa.fa-arrow-circle-down.fa-lg
                  #{category} (#{resource_values.length})
            .panel-collapse.collapse{:id => "item_#{category}"}
              .panel-body
                - resource_values.each do |resource|

                  .row.resource_block

                    %h3 #{resource.title}
                    %p.description #{resource.description_of_service}

                    .col-md-6
                      %ul{:class => "list-group"}
                        %li Address: #{resource.address}
                        %li Alternative Address: #{resource.alternative_address}
                        %li Phone: #{resource.phone_number}
                        %li Alternative Phone: #{resource.alternative_phone_number}
                        %li Website: #{resource.website}
                        %li Fax: #{resource.fax_number}
                        %li Contact Email: #{resource.contact_email}
                        %li Agency Email: #{resource.agency_email}
                        %li Name of Submitter: #{resource.name_of_submitter}

                    .col-md-6
                      = button_to({ :action => 'edit', :decision => 'Approved', :id => resource.id },
                                  :class => 'btn btn-default',
                                  :method => 'get') do
                        %span.fa.fa-lg.fa-pencil
                        Edit

                      = button_to({ :action => 'modify_status', :decision =>"Rejected", :id => resource.id },
                                  :class => 'btn btn-danger',
                                  :data => { :confirm => "Are you sure? Deleting this category is permanent" }) do
                        %span.fa.fa-lg.fa-trash-o
                        Delete
