!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE-edge"}/
    %meta{"name" => "viewport", :content => "width=device-width, initial-scale=1"}/
    %meta{"name" => "description", "content" => ""}/
    %meta{"name" => "author", "content" => ""}/
    %link{:href => "../../assets/ico/favicon.ico", :rel => "shortcut icon"}/

    /%title Jumbotron Template for Twitter Bootstrap

    / Bootstrap Core CSS
    %link{:href => "scss/bootstrap.min.css", :rel => :stylesheet}/

    / Custom Styles for this template
    %link{:href => "css/jumbotron.css", :rel => :stylesheet}/

    / HTML5 Shim and Respond.js IE8 Support of HTML5 elements and media queries.
    / WARNING: Respond.js doesn't work if you view the page using file://
    /[if IE9]
      %script{:src => "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"}
      %script{:src => "https://oss.maxcdn.com/libs/respond.js/1.42/respond.min.js"}

  %body
    .container
      .row
        .col-md-12 
          %h1{:style => "text-align: center"} Administrator Home
    .container
      %ul.nav.nav-pills
        %li.active
          %a(href="#pending_tab" data-toggle="tab" aria-expanded="true") Pending Resources
        %li
          %a(href="#existing_tab" data-toggle="tab") Edit Existing
      %div.tab-content
        %div.tab-pane#pending_tab.active
          - @pending_resources.each do |resource|
            .row.resource_block
              %h3 #{resource.title}
              %p.description #{resource.description_of_service}
              .col-md-6
                %ul{:class => "list-group"}
                  %li Address: #{resource.address}
                  %li Alternative Address: #{resource.alternative_address}
                  %li Phone: #{resource.phone_number}
                  %li Alternative Phone: #{resource.alternative_phone_number}
                  %li Website: #{resource.website}
                  %li Fax: #{resource.fax_number}
                  %li Contact Email: #{resource.contact_email}
                  %li Agency Email: #{resource.agency_email}
                  %li Name of Submitter: #{resource.name_of_submitter}
              .col-md-6
                
                = button_to 'Approve', { :action => 'modify_status' ,:decision =>"Approved", :id => resource.id }, {:class => 'btn btn-success', :method => 'post'}
                = button_to 'Reject', { :action => 'modify_status' ,:decision =>"Rejected", :id => resource.id }, {:class => 'btn btn-danger', :method => 'post'}
              
                
        %div.tab-pane#existing_tab
          - @approved_resources.each do |resource|
            .row.resource_block
              %h3 #{resource.title}
              %p.description #{resource.description_of_service}
              .col-md-6
                %ul{:class => "list-group"}
                  %li Address: #{resource.address}
                  %li Alternative Address: #{resource.alternative_address}
                  %li Phone: #{resource.phone_number}
                  %li Alternative Phone: #{resource.alternative_phone_number}
                  %li Website: #{resource.website}
                  %li Fax: #{resource.fax_number}
                  %li Contact Email: #{resource.contact_email}
                  %li Agency Email: #{resource.agency_email}
                  %li Name of Submitter: #{resource.name_of_submitter}
              .col-md-6
              = button_to 'Delete', { :action => 'modify_status' ,:decision =>"Rejected", :id => resource.id }, {:class => 'btn btn-danger', :method => 'post'}
              = button_to 'Edit', { :action => 'edit' ,:decision =>"Rejected", :id => resource.id }, {:class => 'btn btn-default', :method => 'get'}
                
                
                  
